#!/bin/bash

source /etc/envvars

export ROLE=kube-proxy
export CN="system:kube-proxy"
export TTL=720h
export COMMAND="sv restart proxy"

export PKI_DIR=/dev/shm/kubernetes
export VAULT_TOKEN=${VAULT_TOKEN:-$(grep "token " $PKI_DIR/PROXY_TOKEN | awk '{print $2}')}
rm $PKI_DIR/PROXY_TOKEN

exec 2>&1
exec /consul-template.sh
